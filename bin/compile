#!/bin/bash
# usage: bin/compile <build-dir> <cache-dir> <env-dir>

set -eo pipefail

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)
cache=$(cd "$2/" && pwd)
envdir=$(cd "$3/" && pwd)
buildpack=$(dirname $(dirname $0))

arch=$(uname -m|tr A-Z a-z)
if test $arch = x86_64
then arch=amd64
fi
plat=$(uname|tr A-Z a-z)-$arch

# Python
venv=$cache/venv
mkdir -p $cache/pip
python=python2.7
PATH=$buildpack/$plat/bin:$venv/bin:$PATH

virtualenv() {
    python "$buildpack/vendor/virtualenv-1.11.6/virtualenv.py" "$@"
}

echo "-----> precompiling assets ..."

if [ -e "$envdir/GULPFILE" ]; then
    echo "Alternate gulpfile located"
    GULPFILE=$(cat $envdir/GULPFILE)
fi

cd $build

echo "-----> using gulpfile ${GULPFILE:-gulpfile.js} ..."
gulp --gulpfile ${GULPFILE:-gulpfile.js} assets:copy 2>&1
gulp --gulpfile ${GULPFILE:-gulpfile.js} schedule:next_day_appointment_reminder:install 2>&1

mkdir -p $build/bin
cp `which goose` $build/bin
